{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcommande</th>
                <th>PrixTot</th>
                <th>Userid</th>
                <th>Payment</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idcommande }}</td>
                <td>{{ commande.prixTot }}</td>
                <td>{{ commande.userid }}</td>
                <td>{{ commande.payment }}</td>
                <td>{{ commande.date }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'idcommande': commande.idcommande}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'idcommande': commande.idcommande}) }}">edit</a>
                    <a href="{{ path('app_commande_delete', {'idcommande': commande.idcommande}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
